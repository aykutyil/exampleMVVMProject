<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/main</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="hintText" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/roboto_700</item>
        <item name="android:fontFamily">@font/roboto_700</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>